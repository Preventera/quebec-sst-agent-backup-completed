import React, { useState } from 'react';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { Badge } from '@/components/ui/badge';
import { Alert, AlertDescription } from '@/components/ui/alert';
import { 
  Play, 
  Video, 
  Users, 
  Clock, 
  CheckCircle, 
  AlertTriangle,
  Settings,
  FileText,
  Zap,
  Bot,
  Target,
  Send,
  Download
} from 'lucide-react';

const SafeVisionPage = () => {
  const [selectedScenario, setSelectedScenario] = useState(52);
  const [isOrchestrating, setIsOrchestrating] = useState(false);
  const [orchestrationProgress, setOrchestrationProgress] = useState(0);
  const [currentPhase, setCurrentPhase] = useState('');
  const [generatedScript, setGeneratedScript] = useState('');
  
  const scenarios = {
    52: {
      title: "Capsules vid√©o obligations LMRSST",
      description: "Formation interactive obligations l√©gales employeurs selon LMRSST Art.51",
      agents: ["Hugo", "DiagSST", "ALSS", "LexiNorm"],
      estimatedDuration: "3-5min",
      complexity: "medium",
      priority: "critical"
    },
    116: {
      title: "Comit√© SST chantier temporaire",
      description: "Guide mise en place comit√© SST selon CSTC pour chantiers construction temporaires",
      agents: ["CoSS", "DiagSST", "LexiNorm", "Hugo"],
      estimatedDuration: "2-3min",
      complexity: "high",
      priority: "high"
    }
  };

  const agents = [
    { name: 'Hugo', icon: Bot, phase: 'analysis', status: 'ready', role: 'Orchestrateur central' },
    { name: 'DiagSST', icon: AlertTriangle, phase: 'analysis', status: 'ready', role: 'Analyse conformit√©' },
    { name: 'Sentinelle', icon: Target, phase: 'analysis', status: 'ready', role: 'D√©tection risques' },
    { name: 'LexiNorm', icon: FileText, phase: 'content', status: 'ready', role: 'Validation r√©glementaire' },
    { name: 'ALSS', icon: Users, phase: 'content', status: 'ready', role: 'Conception p√©dagogique' },
    { name: 'Prioris', icon: Zap, phase: 'content', status: 'ready', role: 'Strat√©gie contenu' },
    { name: 'DocuGen', icon: FileText, phase: 'generation', status: 'ready', role: 'G√©n√©ration script' },
    { name: 'CoSS', icon: Users, phase: 'validation', status: 'ready', role: 'Engagement utilisateur' }
  ];

  const [agentStates, setAgentStates] = useState(agents);

  // Fonction pour envoyer le script √† Synthesia
  const sendToSynthesia = async (scriptContent) => {
    try {
      // Pr√©parer les m√©tadonn√©es
      const synthesiaData = {
        title: `Script SafeVision SST - ${new Date().toLocaleDateString('fr-CA')}`,
        script: scriptContent,
        duration: scenarios[selectedScenario].estimatedDuration,
        audience: "Responsables SST Qu√©bec",
        agents: scenarios[selectedScenario].agents,
        generated_by: "AgenticSST Qu√©bec‚Ñ¢",
        scenario: scenarios[selectedScenario].title
      };

      console.log('üì§ Pr√©paration envoi Synthesia...', synthesiaData);
      
      // Simuler d√©lai traitement
      await new Promise(resolve => setTimeout(resolve, 1500));
      
      // Construire URL Synthesia avec param√®tres
      const synthesiaURL = `https://app.synthesia.io/create?` + 
        `title=${encodeURIComponent(synthesiaData.title)}&` +
        `language=fr-CA&` +
        `voice=professional&` +
        `duration=${encodeURIComponent(synthesiaData.duration)}`;
      
      // Copier le script dans le presse-papiers
      if (navigator.clipboard) {
        await navigator.clipboard.writeText(scriptContent);
      }
      
      // Ouvrir Synthesia
      window.open(synthesiaURL, '_blank', 'width=1200,height=800,scrollbars=yes');
      
      // Notification succ√®s
      alert(`‚úÖ Script envoy√© vers Synthesia !
      
üìã Le script a √©t√© copi√© dans votre presse-papiers
üîó Synthesia s'ouvre dans une nouvelle fen√™tre
üìù Collez le script (Ctrl+V) dans l'√©diteur Synthesia
üé¨ Sc√©nario: ${synthesiaData.scenario}
‚è±Ô∏è Dur√©e estim√©e: ${synthesiaData.duration}`);
      
      return true;
    } catch (error) {
      console.error('‚ùå Erreur envoi Synthesia:', error);
      alert(`‚ùå Erreur lors de l'envoi vers Synthesia
      
üîß V√©rifiez votre connexion internet
üí° Le script reste disponible dans l'interface
üìã Vous pouvez copier manuellement le script ci-dessous`);
      return false;
    }
  };

  // Fonction pour t√©l√©charger le script
  const downloadScript = () => {
    const blob = new Blob([generatedScript], { type: 'text/plain;charset=utf-8' });
    const url = URL.createObjectURL(blob);
    const link = document.createElement('a');
    link.href = url;
    link.download = `Script_SafeVision_Scenario${selectedScenario}_${Date.now()}.txt`;
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
    URL.revokeObjectURL(url);
  };

  const simulateOrchestration = async () => {
    setIsOrchestrating(true);
    setOrchestrationProgress(0);
    setGeneratedScript('');
    
    const phases = ['analysis', 'content', 'generation', 'validation'];
    let progress = 0;
    
    for (let phaseIndex = 0; phaseIndex < phases.length; phaseIndex++) {
      const phase = phases[phaseIndex];
      setCurrentPhase(phase);
      
      const phaseAgents = agentStates.filter(a => a.phase === phase);
      
      for (let agentIndex = 0; agentIndex < phaseAgents.length; agentIndex++) {
        const agent = phaseAgents[agentIndex];
        
        // Marquer l'agent comme en cours
        setAgentStates(prev => prev.map(a => 
          a.name === agent.name 
            ? { ...a, status: 'working' }
            : a
        ));
        
        // Simulation du travail (2-4 secondes)
        await new Promise(resolve => setTimeout(resolve, 2000 + Math.random() * 2000));
        
        // Marquer comme termin√©
        setAgentStates(prev => prev.map(a => 
          a.name === agent.name 
            ? { ...a, status: 'complete' }
            : a
        ));
        
        progress += (100 / 8); // 8 agents au total
        setOrchestrationProgress(Math.round(progress));
      }
    }
    
    // G√©n√©ration du script final
    setTimeout(() => {
      const mockScript = generateMockScript(selectedScenario);
      setGeneratedScript(mockScript);
      setIsOrchestrating(false);
      setCurrentPhase('completed');
    }, 1000);
  };

  const generateMockScript = (scenarioId: number): string => {
    const scenario = scenarios[scenarioId];
    return `# Script SafeVision - ${scenario.title}

## M√©tadonn√©es Production
- **Format**: Micro-learning interactif
- **Dur√©e**: ${scenario.estimatedDuration}
- **Audience**: Employeurs et responsables SST
- **Complexit√©**: ${scenario.complexity}

## Introduction (0:00-0:30)
**NARRATEUR**: "Au Qu√©bec, la Loi sur la sant√© et la s√©curit√© du travail impose des obligations pr√©cises aux employeurs..."

**VISUEL**: Logo CNESST + Statistiques accidents de travail 2024

## D√©veloppement (0:30-2:30)
**NARRATEUR**: "L'article 51 de la LMRSST stipule que l'employeur doit..."

**VISUEL**: Animation des 8 obligations principales
- Formation des travailleurs ‚úì
- Fourniture d'√©quipements de protection ‚úì
- Mise en place de comit√© SST (si +20 employ√©s) ‚úì

## Points d'Interaction (2:30-3:00)
**QUIZ INTERACTIF**: "Votre entreprise compte 45 employ√©s. √ätes-vous oblig√© d'avoir un comit√© SST?"
- A) Oui, selon l'art. 51 LMRSST ‚úì
- B) Non, c'est optionnel
- C) Seulement si accidents fr√©quents

## Conclusion (3:00-3:30)
**NARRATEUR**: "AgenticSST Qu√©bec vous accompagne dans cette d√©marche de conformit√©..."

**VISUEL**: Call-to-action + Contact information

---
**G√©n√©r√© par**: AgenticSST Qu√©bec - SafeVision Integration
**Agents contributeurs**: ${scenario.agents.join(', ')}
**Confiance moyenne**: 94%
**Production-ready**: ‚úÖ Oui`;
  };

  const getStatusIcon = (status: string) => {
    switch (status) {
      case 'working': 
        return <div className="animate-spin h-4 w-4 border-2 border-blue-500 border-t-transparent rounded-full" />;
      case 'complete': 
        return <CheckCircle className="h-4 w-4 text-green-500" />;
      default: 
        return <div className="h-4 w-4 bg-gray-300 rounded-full" />;
    }
  };

  const getPhaseColor = (phase: string) => {
    switch (phase) {
      case 'analysis': return 'bg-blue-100 text-blue-800 border-blue-200';
      case 'content': return 'bg-green-100 text-green-800 border-green-200';
      case 'generation': return 'bg-purple-100 text-purple-800 border-purple-200';
      case 'validation': return 'bg-orange-100 text-orange-800 border-orange-200';
      default: return 'bg-gray-100 text-gray-800 border-gray-200';
    }
  };

  return (
    <div className="p-6 max-w-7xl mx-auto space-y-6">
      {/* Header */}
      <div className="flex items-center justify-between">
        <div>
          <h1 className="text-3xl font-bold text-gray-900 flex items-center gap-3">
            <Video className="h-8 w-8 text-blue-600" />
            SafeVision Integration
          </h1>
          <p className="text-gray-600 mt-2">
            G√©n√©ration automatique de contenu vid√©o SST via orchestration multi-agents
          </p>
        </div>
        
        <div className="flex items-center gap-3">
          <Badge variant="secondary" className="flex items-center gap-2">
            <Bot className="h-4 w-4" />
            8 Agents Actifs
          </Badge>
          <Badge variant="secondary" className="flex items-center gap-2">
            <FileText className="h-4 w-4" />
            196 Docs CNESST
          </Badge>
        </div>
      </div>

      <div className="grid grid-cols-1 xl:grid-cols-3 gap-6">
        {/* Configuration */}
        <div className="xl:col-span-1">
          <Card>
            <CardHeader>
              <CardTitle className="flex items-center gap-2">
                <Settings className="h-5 w-5" />
                Configuration SafeVision
              </CardTitle>
            </CardHeader>
            <CardContent className="space-y-4">
              <div>
                <label className="block text-sm font-medium mb-2">Sc√©nario</label>
                <select 
                  value={selectedScenario}
                  onChange={(e) => setSelectedScenario(parseInt(e.target.value))}
                  className="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
                >
                  {Object.entries(scenarios).map(([id, scenario]) => (
                    <option key={id} value={id}>
                      Sc√©nario #{id} - {scenario.title}
                    </option>
                  ))}
                </select>
              </div>

              <div className="bg-blue-50 p-4 rounded-lg">
                <h4 className="font-medium text-blue-900 mb-2">Sc√©nario s√©lectionn√©</h4>
                <p className="text-sm text-blue-700 mb-3">
                  {scenarios[selectedScenario].description}
                </p>
                <div className="flex flex-wrap gap-2 mb-3">
                  {scenarios[selectedScenario].agents.map(agent => (
                    <Badge key={agent} variant="secondary" className="text-xs">
                      {agent}
                    </Badge>
                  ))}
                </div>
                <div className="flex items-center justify-between text-xs text-blue-600">
                  <span>Dur√©e: {scenarios[selectedScenario].estimatedDuration}</span>
                  <span>Complexit√©: {scenarios[selectedScenario].complexity}</span>
                </div>
              </div>

              <Button
                onClick={simulateOrchestration}
                disabled={isOrchestrating}
                className="w-full"
                size="lg"
              >
                {isOrchestrating ? (
                  <>
                    <div className="animate-spin h-4 w-4 border-2 border-white border-t-transparent rounded-full mr-2" />
                    Orchestration en cours... ({orchestrationProgress}%)
                  </>
                ) : (
                  <>
                    <Play className="h-4 w-4 mr-2" />
                    D√©marrer Orchestration SafeVision
                  </>
                )}
              </Button>
            </CardContent>
          </Card>
        </div>

        {/* Orchestration Status */}
        <div className="xl:col-span-2">
          <Card>
            <CardHeader>
              <CardTitle className="flex items-center gap-2">
                <Bot className="h-5 w-5" />
                Pipeline Multi-Agents SafeVision
              </CardTitle>
              {currentPhase && (
                <Badge className={`w-fit ${getPhaseColor(currentPhase)}`}>
                  Phase active: {currentPhase}
                </Badge>
              )}
            </CardHeader>
            <CardContent>
              <div className="grid grid-cols-2 lg:grid-cols-4 gap-4">
                {agentStates.map((agent) => (
                  <div key={agent.name} className="bg-gray-50 rounded-lg p-4">
